<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="SocialHandleTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">@dimen/spacing</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">18dp</item>
		<item name="android:layout_margin">@dimen/double_spacing</item>
	</style>

	<style name="StyledButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/spacing</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="TabRadioButton" parent="Widget.Sherlock.ActionBar.TabView">
		<item name="android:background">@drawable/radiobutton_tab_background</item>
		<item name="android:padding">12dp</item>
		<item name="android:button">@null</item>
		<item name="android:layout_width">0px</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">?attr/textColorPrimary</item>
		<item name="android:textSize">11sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:ellipsize">marquee</item>
	</style>

</resources>