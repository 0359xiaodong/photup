<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="SocialHandleTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">@dimen/spacing</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">18dp</item>
		<item name="android:layout_margin">@dimen/double_spacing</item>
	</style>

	<style name="StyledButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/spacing</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>

</resources>